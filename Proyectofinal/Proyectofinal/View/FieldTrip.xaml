<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Proyectofinal.ViewModel" 
             x:DataType="viewmodel:FieldTripViewModel"
             x:Class="Proyectofinal.View.FieldTrip">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="30,0,30,0">
                <Frame BackgroundColor="Transparent" Margin="0,50,0,0">
                    <Image Source="LogoUlacit.png"/>
                </Frame>
                <Label Text="Academic Field trips" 
                   TextColor="#5e5ca8" 
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Padding="5"/>

                <Label Text="Entry" 
                   TextColor="#665ca8"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Start"
                   Padding="10"/>

                <Entry Placeholder="Codigo"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraId}"
                   TextTransform="Uppercase"
                   ></Entry>

                <Entry Placeholder="Organizacion"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraOrganizacion}"
                   ></Entry>

                <Entry Placeholder="Ubicacion"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraUbicacion}"
                   ></Entry>

                <Entry Placeholder="Fecha"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraFecha}"
                   ></Entry>

                <Entry Placeholder="HoraSalida"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraHoraSalida}"
                   ></Entry>

                <Entry Placeholder="Hora Regreso"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraHoraRegreso}"
                   ></Entry>

                <Entry Placeholder="Descripcion"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraDescripcion}"
                   ></Entry>

                <Entry Placeholder="Requisitos"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraRequisitos}"
                   ></Entry>

                <Entry Placeholder="Valor"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraValor}"
                   ></Entry>

                <Entry Placeholder="Precio"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraPrecio}"
                   ></Entry>

                <Entry Placeholder="Link"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraLink}"
                   ></Entry>

                <Entry Placeholder="Imagen URL"
                   Margin="5"
                   Text="{Binding FieldTrip.GiraImgURL}"
                   ></Entry>

                <Button Text="Entry data"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="#5e5ca8"
                    CornerRadius="10"
                    Margin="10,30,10,30"
                    Command="{Binding EntryTripCommand}"
                />


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
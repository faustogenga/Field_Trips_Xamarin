<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyectofinal.View.Admin">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Refresh" Clicked="OnRefreshClicked" />
            <ListView x:Name="userListView" ItemsSource="{Binding Users}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Id}" FontAttributes="Bold"/>
                                <Label Text="{Binding Email}" FontAttributes="Bold" />
                                <Label Text="{Binding Nombre}" />
                                <Label Text="{Binding Carrera}" />
                                <Label Text="{Binding Cedula}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>